<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import model.Section?>

<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DashboardController">
   
   <top>
      <HBox fx:id="headerBar" alignment="CENTER_LEFT" styleClass="h-box-header" prefHeight="60.0" spacing="20.0" style="-fx-background-color: WHITE;">
         <children>
            <Label styleClass="h1-title" text="EduTracker Gradebook" />
            <StackPane HBox.hgrow="ALWAYS" />
            <Label fx:id="teacherNameLabel" styleClass="label" text="Welcome, Teacher Name" />
            <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="button-link" text="Log Out" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </top>
   
   <left>
      <VBox fx:id="sidebar" prefWidth="200.0" style="-fx-background-color: #16A085;">
         <children>
            <Label styleClass="label" text="CLASSES" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="15.0" top="20.0" />
               </VBox.margin>
            </Label>
            <ListView fx:id="classListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" style="-fx-background-color: #16A085; -fx-border-color: #16A085;" />
         </children>
      </VBox>
   </left>
   
   <center>
      <VBox fx:id="contentArea" styleClass="background" alignment="TOP_LEFT" spacing="20.0">
         <children>
            <Label fx:id="contentHeaderLabel" styleClass="h2-section" text="Main Dashboard" />
            <Label styleClass="label-subtle" text="Select a class from the left sidebar to view the roster and grades." />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>