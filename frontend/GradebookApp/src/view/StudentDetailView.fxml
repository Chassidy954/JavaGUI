<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" prefHeight="650.0" prefWidth="700.0" spacing="15.0" styleClass="background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StudentDetailController">
   <children>

      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: WHITE; -fx-padding: 15;">
         <Label styleClass="h2-section" text="Student Record:" />
         <Label fx:id="studentNameLabel" styleClass="h1-title" text="[Student Name]" />
         <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <Button mnemonicParsing="false" onAction="#closeWindow" styleClass="button-primary" text="Close" />
         </HBox>
      </HBox>

      <VBox alignment="TOP_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>

         <Label styleClass="h2-section" text="Course Grades" />
         <TableView fx:id="gradesTable" prefHeight="250.0" prefWidth="660.0" styleClass="roster-table" />

         <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <children>
               <Button text="+ Add Grade" onAction="#handleAddGrade" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
               <Button text="Delete Selected" onAction="#handleDeleteGrade" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </children>
            <padding>
               <Insets top="5.0" bottom="10.0" />
            </padding>
         </HBox>
         <Separator />

         <Label styleClass="h2-section" text="Attendance Records" />
         <TableView fx:id="attendanceTable" prefHeight="200.0" prefWidth="660.0" styleClass="roster-table" />

      </VBox>
   </children>
</VBox>